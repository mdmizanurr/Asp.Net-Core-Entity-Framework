<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link asp-href-include="/lib/bootstrap/dist/css/base.css" rel="stylesheet" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error {
            border-color: red;
        }
    </style>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>

</head>

<body class="m-1 p-1">
    
    <div class="bg-info p-2 row">
        <div class="col">
            <h4>@ViewBag.Title</h4>
          
        </div>
        <div class="col-4">
            <a class="btn btn-sm btn-primary" asp-action="List" asp-controller="Product"> Product </a>
            <a class="btn btn-sm btn-warning" asp-action="Index" asp-controller="Admin"> Product Admin </a>
            <a class="btn btn-sm btn-warning" asp-action="List" asp-controller="Order">Orders</a>
            <a class="btn btn-sm btn-dark" asp-action="Index" asp-controller="Service">Service</a>
            <a class="btn btn-sm btn-danger" asp-action="Logout" asp-controller="Account">Logout</a>
        </div>
    </div>


    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @RenderBody()
</body>
</html>
